<idea-plugin>
    <id>org.bytecamp.program_repair.astor_plugin</id>
    <name>Astor</name>
    <vendor>ByteCamp Program Repair</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <projectListeners>
        <listener class="org.bytecamp.program_repair.astor_plugin.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </projectListeners>
    <actions>
        <group id="astor_plugin.AstorAction" text="Astor" description="Analyze with Astor">
            <add-to-group group-id="MainMenu" anchor="last" />
            <action class="org.bytecamp.program_repair.astor_plugin.actions.AstorHelloAction" id="astor_plugin.AstorHelloAction" text="Say Hello"/>
        </group>
    </actions>
</idea-plugin>
