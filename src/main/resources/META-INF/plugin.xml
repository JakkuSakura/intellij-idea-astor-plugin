<idea-plugin>
    <id>org.bytecamp.program_repair.astor_plugin</id>
    <name>Astor Plugin</name>
    <vendor>ByteCamp Program Repair</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="org.bytecamp.program_repair.astor_plugin.services.MyApplicationService"/>
        <projectService serviceImplementation="org.bytecamp.program_repair.astor_plugin.services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="org.bytecamp.program_repair.astor_plugin.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
